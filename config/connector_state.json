    },
    {
      "name": "test-mqtt",
      "protocol": "mqtt",
      "endpoint": "mqtt://test-broker:1883",
      "topics": [
        "test/topic"
      ],
      "qos": 1
    },
    {
      "name": "test-opcua",
      "type": "opcua",
      "endpoint": "opc.tcp://192.168.1.100:4840/test",
